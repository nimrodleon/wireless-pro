[Unit]
Description=dr4Server

[Service]
WorkingDirectory=/opt/bitWorker
ExecStart=/opt/bitWorker/MkBitWorker
Restart=always
RestartSec=10
KillSignal=SIGINT
SyslogIdentifier=dotnet-bitWorker
User=www-data
Environment=ASPNETCORE_ENVIRONMENT=Production
Environment=DOTNET_PRINT_TELEMETRY_MESSAGE=false

[Install]
WantedBy=multi-user.target
